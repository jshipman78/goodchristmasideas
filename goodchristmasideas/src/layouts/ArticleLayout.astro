---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    image?: string;
    pubDate: string;
    updatedDate?: string;
    category: string;
    budget?: string;
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} image={frontmatter.image}>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/" class="hover:text-christmas-red">Home</a>
      <span class="mx-2">/</span>
      <a href={`/category/${frontmatter.category.toLowerCase()}`} class="hover:text-christmas-red capitalize">
        {frontmatter.category}
      </a>
      <span class="mx-2">/</span>
      <span class="text-gray-700">{frontmatter.title}</span>
    </nav>
    
    <!-- Article Header -->
    <header class="mb-10">
      <h1 class="text-4xl md:text-5xl font-display font-bold text-pine mb-4">
        {frontmatter.title}
      </h1>
      <p class="text-xl text-gray-600 mb-4">{frontmatter.description}</p>
      <div class="flex flex-wrap gap-4 text-sm text-gray-500">
        <span>ðŸ“… Updated: {new Date(frontmatter.updatedDate || frontmatter.pubDate).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}</span>
        {frontmatter.budget && <span>ðŸ’° Budget: {frontmatter.budget}</span>}
        <span class="bg-christmas-green/10 text-christmas-green px-3 py-1 rounded-full capitalize">
          {frontmatter.category}
        </span>
      </div>
    </header>
    
    <!-- Article Content -->
    <div class="prose-custom">
      <slot />
    </div>
    
    <!-- Affiliate Disclosure -->
    <aside class="mt-12 p-6 bg-gray-50 rounded-xl border border-gray-200">
      <p class="text-sm text-gray-600">
        <strong>Affiliate Disclosure:</strong> This page contains affiliate links. If you purchase through these links, 
        we may earn a small commission at no extra cost to you. This helps support our site and allows us to continue 
        creating helpful gift guides. Thank you for your support! ðŸŽ„
      </p>
    </aside>
  </article>
</BaseLayout>
