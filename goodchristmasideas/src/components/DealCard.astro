---
import StarRating from './StarRating.astro';

interface Props {
  title: string;
  description: string;
  price: string;
  originalPrice?: string;
  rating: number;
  amazonUrl: string;
  badge?: string;
  prime?: boolean;
}

const { title, description, price, originalPrice, rating, amazonUrl, badge, prime = true } = Astro.props;

// Extract ASIN from Amazon URL
function extractASIN(url: string): string | null {
  const patterns = [
    /\/dp\/([A-Z0-9]{10})/i,
    /\/gp\/product\/([A-Z0-9]{10})/i,
    /\/ASIN\/([A-Z0-9]{10})/i,
    /\?.*?asin=([A-Z0-9]{10})/i,
  ];
  for (const pattern of patterns) {
    const match = url.match(pattern);
    if (match) return match[1];
  }
  return null;
}

// Extract affiliate tag
function extractTag(url: string): string {
  const match = url.match(/tag=([^&]+)/);
  return match ? match[1] : 'memoofadomeen-20';
}

const asin = extractASIN(amazonUrl);
const tag = extractTag(amazonUrl);

// Generate Amazon affiliate image URL (250px size)
const imageUrl = asin
  ? `https://ws-na.amazon-adsystem.com/widgets/q?_encoding=UTF8&ASIN=${asin}&Format=_SL250_&ID=AsinImage&tag=${tag}`
  : '/placeholder.svg';

// Calculate discount percentage
const discount = originalPrice ? Math.round((1 - parseFloat(price.replace(/[^0-9.]/g, '')) / parseFloat(originalPrice.replace(/[^0-9.]/g, ''))) * 100) : null;
---

<article class="deal-card bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 flex flex-col">
  <!-- Image Section -->
  <a href={amazonUrl} target="_blank" rel="noopener noreferrer nofollow sponsored" class="block relative">
    <div class="aspect-square bg-gray-50 flex items-center justify-center p-4 overflow-hidden">
      <img
        src={imageUrl}
        alt={title}
        class="max-w-full max-h-full object-contain hover:scale-105 transition-transform duration-300"
        loading="lazy"
        onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22%3E%3Crect fill=%22%23f3f4f6%22 width=%22100%22 height=%22100%22/%3E%3Ctext x=%2250%22 y=%2250%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22%239ca3af%22 font-size=%2240%22%3EðŸŽ%3C/text%3E%3C/svg%3E'"
      />
    </div>

    <!-- Badges -->
    <div class="absolute top-2 left-2 flex flex-col gap-1">
      {badge && (
        <span class="bg-christmas-red text-white text-xs font-bold px-2 py-1 rounded shadow">
          {badge}
        </span>
      )}
      {discount && discount > 0 && (
        <span class="bg-green-600 text-white text-xs font-bold px-2 py-1 rounded shadow">
          {discount}% OFF
        </span>
      )}
    </div>

    {prime && (
      <span class="absolute top-2 right-2 bg-[#232f3e] text-white text-xs font-bold px-2 py-1 rounded shadow">
        Prime
      </span>
    )}
  </a>

  <!-- Content Section -->
  <div class="p-4 flex flex-col flex-grow">
    <!-- Title (clickable) -->
    <a href={amazonUrl} target="_blank" rel="noopener noreferrer nofollow sponsored" class="block mb-2">
      <h3 class="font-semibold text-gray-900 line-clamp-2 hover:text-christmas-red transition-colors">
        {title}
      </h3>
    </a>

    <!-- Description -->
    <p class="text-sm text-gray-600 mb-3 line-clamp-2 flex-grow">
      {description}
    </p>

    <!-- Rating -->
    <div class="mb-3">
      <StarRating rating={rating} />
    </div>

    <!-- Price Section -->
    <div class="flex items-end justify-between mt-auto">
      <div>
        <span class="text-2xl font-bold text-pine">{price}</span>
        {originalPrice && (
          <span class="ml-2 text-sm text-gray-400 line-through">{originalPrice}</span>
        )}
      </div>
      <a
        href={amazonUrl}
        target="_blank"
        rel="noopener noreferrer nofollow sponsored"
        class="bg-christmas-red hover:bg-red-700 text-white text-sm font-semibold py-2 px-4 rounded-lg transition-colors"
      >
        View Deal
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
