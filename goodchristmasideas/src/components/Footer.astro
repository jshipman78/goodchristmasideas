---
const currentYear = new Date().getFullYear();

const categories = [
  { href: '/category/for-him', label: 'Gifts for Him' },
  { href: '/category/for-her', label: 'Gifts for Her' },
  { href: '/category/for-kids', label: 'Gifts for Kids' },
  { href: '/category/for-teens', label: 'Gifts for Teens' },
  { href: '/category/for-parents', label: 'Gifts for Parents' },
  { href: '/category/for-grandparents', label: 'Gifts for Grandparents' },
];

const budgetLinks = [
  { href: '/budget/under-25', label: 'Under $25' },
  { href: '/budget/under-50', label: 'Under $50' },
  { href: '/budget/under-100', label: 'Under $100' },
  { href: '/budget/luxury', label: 'Luxury Gifts' },
